<style>

.container-home {
  margin: 0 30px;
  @media screen and (max-width: 600px) {
    margin: 0;
  }
}

/* highlight section */
.carousel-indicators {
  list-style: none; 
  padding: 0; 
}

.carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


/* new arrivals section */
.new-arrival-text h3{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px;
  @media screen and (max-width: 600px){
    flex-direction: row;
    padding-left: 0;
    padding-right: 0;
  }
}

.new-arrival-text h3::before,
.new-arrival-text h3::after {
  content: '';
  height: 1px;
  background-color: rgb(154, 153, 153);
  flex: 0.25;
  margin: 0 10px;  
}

.new-arrival .new-arrival-box-container {
  display: grid;
  grid-template-columns: repeat(2, minmax(10rem, 1fr));
  gap: 30px;
  @media screen and (max-width: 600px){
    grid-template-columns: repeat(1, minmax(10rem, 1fr));
  }
}

/* products section */
.products .box-container {
  display: grid;
  grid-template-columns: repeat(4, minmax(10rem, 1fr));
  gap: 1.5rem;
  margin-top: 50px;
  margin-bottom: 50px;
  @media screen and (max-width: 600px) {
    grid-template-columns: repeat(2, minmax(10rem, 1fr));
    padding-left: 30px;
    padding-right: 30px;
  }
}

.products .box-container .box {
  background: #fff;
  border: .1rem solid rgba(0, 0, 0, .2);
  box-shadow: var(--box--shadow);
  position: relative;
  overflow: hidden;
  text-align: center;
}

.products .box-container .box img {
  width: 100%;
  height: auto;
}

.products .box-container .box h4 {
  padding: 0;
  text-align: left;
}

.product-tile-container {
  display: flex;
  justify-content: space-between;
  margin: 0 30px 30px 30px;
}

.product-tile-category {
  color: gray;
}

.product-tile-price-new {
  color: red;
}

.product-tile-price-old {
  color: gray;
  text-decoration: line-through;
}

.product-tile-price-standard {
  color: black;
}







@media screen and (max-width: 600px) {

  .new-arrival h3::before {
    content: '';
    height: 1px;
    background-color: rgb(154, 153, 153);
    flex: 1;
    margin: 0 10px 0 0;
  }

  .new-arrival h3::after {
    content: '';
    height: 1px;
    background-color: rgb(154, 153, 153);
    flex: 1;
